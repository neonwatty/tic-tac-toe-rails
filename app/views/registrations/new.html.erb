<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
  <h1 class="font-bold text-2xl mb-4">Sign Up</h1>

  <% if @user.errors.any? %>
    <div class="mb-4 p-2 bg-red-100 text-red-700 rounded">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: registration_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email_address, class: "block mb-1 font-semibold" %>
      <%= form.email_field :email_address, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mb-4">
      <%= form.label :password, class: "block mb-1 font-semibold" %>
      <%= form.password_field :password, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mb-4">
      <%= form.label :password_confirmation, class: "block mb-1 font-semibold" %>
      <%= form.password_field :password_confirmation, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= form.submit "Register", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <div class="mt-6 flex flex-col gap-2 text-center">
    <%= link_to 'Already have an account? Sign in', new_session_path, class: 'text-blue-600 hover:underline' %>
    <%= link_to 'Forgot password?', new_password_path, class: 'text-gray-600 hover:underline' %>
  </div>
</div>
